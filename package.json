{
  "name": "game-back",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --watch",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "db:reset": "node ace migration:reset && node ace migration:run",
    "calc:update": "npm update game-calc-logic",
    "run:prod": "NODE_ENV=production node ace build --ignore-ts-errors && cd build && npm ci --omit='dev' && node bin/server.js"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#commands/*": "./app/commands/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.7.6",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.1.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.3",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.1.1",
    "@maximemrf/adonisjs-jwt": "^0.1.0",
    "@vinejs/vine": "^2.1.0",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.1.2",
    "crypto": "^1.0.1",
    "game-calc-logic": "git+ssh://git@git.bsn.si:project/hoot/game-calc-logic.git#develop",
    "luxon": "^3.5.0",
    "pg": "^8.12.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "tonweb": "^0.0.66",
    "uuid": "^10.0.0"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
